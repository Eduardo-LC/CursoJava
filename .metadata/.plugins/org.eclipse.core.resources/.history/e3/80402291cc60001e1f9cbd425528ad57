package streams;

import java.util.Arrays;
import java.util.List;
import java.util.function.Predicate;

public class ProdutoTeste {
	
	public static void main(String[] args) {
	
		Produto p1 = new Produto(1500, -0.30 , true );
		Produto p2 = new Produto(2500, -0.30 , false );
		Produto p3 = new Produto(3500, -0.30 , true );
		Produto p4 = new Produto(4500, 1 , false );
		Produto p5 = new Produto(5500, -0.30 , true );
		
		List<Produto> produtos = Arrays.asList(p1, p2, p3, p4, p5);
		
		Predicate<Produto> temFreteGratis = 
				p -> p.freteGratis == true;
				
		Predicate<Produto> temDesconto = 
				p -> p.desconto == -0.30;
		
		
		
	}
	
	

}
