public class DesafioCalculadora {
	
	public static void main(String[] args) {
		
	
		
		
			
		String valor1 = JOptionPane.showInputDialog(
				"Digite o primeiro número:");
		String valor2 = JOptionPane.showInputDialog(
				"Digite o segundo número:");
		String tipo = JOptionPane.showInputDialog(
				"Digite o tipo de operação:");
		
		double resultado = "+".equals(tipo) ? valor1 + valor2 : 0;
		resultado = "+".equals(tipo) ? valor1 + valor2 : 0;
		 
		boolean posi = "posi" == tipo ;
		boolean negativ = "negativ" == tipo = valor1 - valor2;
		
		System.out.printf("%2f %s %f = ?", valor1, tipo, valor2);
		

		
	}

}
