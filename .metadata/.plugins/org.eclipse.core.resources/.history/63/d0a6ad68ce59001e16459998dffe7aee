package oo.heranÃ§a.desafio;

public class Carro {

	//Velocidade Atual
	//Frear
	//Acelerar
	
	double velocidadeAtual = 0;
	
	double acelerar() {
			velocidadeAtual += 5;
			return velocidadeAtual;
	}
	
	double frear() {
		if(velocidadeAtual > 0) {
			velocidadeAtual -= 5;
			return velocidadeAtual;
		}
		else {
			System.out.println("ERRO DE VELOCIDADE");
		}
		return velocidadeAtual;
	}
	
}
